#ifndef STRUCT_H
#define STRUCT_H
/**
 * \struct s_game
 * \brief struct of game set.
 *
 */
typedef struct s_game
{
  int help;/*!<mod to show the help of the game. */
  int gui;/*!<mod to use the graphic grid. */
  int log;/*!<mod to save score. */
}s_game;

/**
 * \struct s_player
 * \brief struct of a player.
 *
 * s_player is a struct to define the statut of players
 * the Name of the player is compose of three characters.
 * 
 */
typedef struct s_player
{
  char name[3]; /*!<name of the player. */
  int score; /*!< score of the player. */
}s_player;

typedef struct s_score
{
  int scoreP1;
  int scoreP2;
}s_score;

#endif //STRUCT_H
